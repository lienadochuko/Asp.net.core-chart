@model study2.Models.Transactions

@{
    ViewData["PageTitle"] = Model.TransactionsId == 0 ? "Create new Transaction" : "Edit Transactions";
}

<div class="row" style="margin-top:3%;">
    <div class="col-md-7">
        <div class="widget p-5" style="background-color: #212b36">
            <form asp-action="AddOrEdit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3">
                    <ejs-datepicker id="date" ejs-for="Date" placeholder="Date" floatLabelType="Always"
                    format="MMM-dd-yy"></ejs-datepicker>
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <ejs-dropdownlist id="ddlCategory" ejs-for="CategoryId" 
                    dataSource="@ViewBag.Categories" placeholder="Category"
                    floatLabelType="Always" allowFiltering="true" ignoreAccent="true" filterType="Contains" popupHeight="200px">
                        <e-dropdownlist-fields value="CategoryId" text="TilePlusIcon"></e-dropdownlist-fields>
                    </ejs-dropdownlist>
                </div>
                <div class="mb-3">
                    <ejs-numerictextbox id="Amount" ejs-for="Amount" value="0"
                    Type="text" placeholder="Amount" floatLabelType="Always"
                    currency='EUR' min=0 format="C2">
                    </ejs-numerictextbox>
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <ejs-textbox id="note" ejs-for="Note" placeholder="Note"
                    floatLabelType="Always" multiline="true"></ejs-textbox>
                    <span asp-validation-for="Note" class="text-danger"></span>
                </div>                
                <div class ="form-group mr-1">
                    <ejs-button id="submit" type="submit" cssClass="e-success" content="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div class="col-md-5">
        <div class="widget h-100 w-100 d-flex justify-content-center align-items-center">
            <i class="fa-solid fa-money-bill-transfer fa-10x"></i>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
